<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/DIMEN_32DP"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <com.power.home.ui.widget.MyImageView
        android:id="@+id/iv_popup_main_image"
        android:layout_width="@dimen/DIMEN_311DP"
        android:layout_height="wrap_content"
        app:ratio="1.32"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_popup_main_close"
        android:layout_width="@dimen/DIMEN_32DP"
        android:layout_height="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_40DP"
        android:src="@drawable/icon_popup_main_close" />
</LinearLayout>