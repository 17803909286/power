<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_96DP"
    android:layout_margin="@dimen/DIMEN_16DP"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_order"
        android:layout_width="@dimen/DIMEN_64DP"
        android:layout_height="match_parent"
        android:background="@color/colorOrangeFF6B47" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_12DP">

        <TextView
            android:id="@+id/iv_item_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/colorBlack1A1F28"
            android:textSize="@dimen/DIMEN_16SP"
            tools:text="如何“毁掉”竞争对手的人才" />

        <TextView
            android:id="@+id/iv_item_order_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_order_title"
            android:layout_marginTop="@dimen/DIMEN_8DP"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/colorBlack79808B"
            android:textSize="@dimen/DIMEN_12SP"
            tools:text="如何突现突袭、越轨发展" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_item_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackC2C8D0"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="到期时间：2021-04-20" />

            <TextView
                android:id="@+id/iv_item_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_8DP"
                android:text="已到期"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_12SP"
                android:visibility="gone" />

            <TextView
                android:id="@+id/iv_item_order_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_right_gray"
                android:drawablePadding="@dimen/DIMEN_4DP"
                android:gravity="right"
                android:text="续费"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/DIMEN_12SP"
                android:visibility="visible" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>