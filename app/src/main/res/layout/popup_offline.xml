<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingTop="@dimen/DIMEN_24DP"
    android:paddingBottom="@dimen/DIMEN_24DP"
    tools:ignore="Suspicious0dp,InefficientWeight,
    HardcodedText,RtlSymmetry,RtlHardcoded,TextFields">

    <TextView
        android:id="@+id/tv_share_wx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_share_wx"
        android:drawablePadding="@dimen/DIMEN_8DP"
        android:gravity="center"
        android:text="微信"
        android:textColor="@color/colorBlackC2C8D0"
        android:textSize="@dimen/DIMEN_12SP" />

    <TextView
        android:id="@+id/tv_share_friends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_share_friend"
        android:drawablePadding="@dimen/DIMEN_8DP"
        android:gravity="center"
        android:text="朋友圈"
        android:textColor="@color/colorBlackC2C8D0"
        android:textSize="@dimen/DIMEN_12SP" />

</LinearLayout>