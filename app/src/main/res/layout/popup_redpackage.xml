<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackCC000000"
    android:gravity="center"
    tools:ignore="Suspicious0dp,InefficientWeight,SpUsage,ContentDescription,
    HardcodedText,RtlSymmetry,RtlHardcoded,TextFields">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DIMEN_32DP"
        android:background="@drawable/back_popup">

        <ImageView
            android:id="@+id/iv_popup_red_close"
            android:layout_width="@dimen/DIMEN_40DP"
            android:layout_height="@dimen/DIMEN_40DP"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/DIMEN_6DP"
            android:layout_marginRight="@dimen/DIMEN_6DP"
            android:padding="@dimen/DIMEN_10DP"
            android:src="@drawable/icon_popup_red_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_60DP"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_98DP"
                android:background="@drawable/back_popup_red" />

            <TextView
                android:id="@+id/tv_popup_red_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_47DP"
                android:layout_marginTop="@dimen/DIMEN_20DP"
                android:layout_marginRight="@dimen/DIMEN_47DP"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/DIMEN_2DP"
                android:textColor="@color/colorRedFF4D4D"
                android:textSize="@dimen/DIMEN_16SP"
                android:textStyle="bold"
                tools:text="分享成功\n恭喜您！获得XX元分享奖励\n已放入您的红包" />

            <TextView
                android:id="@+id/tv_popup_red_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_24DP"
                android:layout_marginBottom="@dimen/DIMEN_16DP"
                android:textColor="@color/colorBlackC2C8D0"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="说明：每天仅限十个分享红包" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>