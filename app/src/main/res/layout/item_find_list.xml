<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_50DP"
    android:layout_marginLeft="@dimen/DIMEN_16DP"
    android:layout_marginRight="@dimen/DIMEN_16DP"
    android:gravity="center_vertical"
    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="@dimen/DIMEN_24DP"
        android:layout_height="@dimen/DIMEN_24DP"
        android:background="@drawable/icon_find_one"
        android:gravity="center"
        android:textColor="@color/colorBlackA6AEB7"
        android:textSize="@dimen/DIMEN_14SP" />

    <LinearLayout
        style="@style/ll_main_find_task"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/DIMEN_24DP"
            android:layout_height="@dimen/DIMEN_24DP"
            android:background="@drawable/icon_avatar_header" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_main_find_title"
            android:layout_marginLeft="@dimen/DIMEN_8DP"
            android:text="每日签到 0/1"
            android:textSize="@dimen/DIMEN_14SP" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/DIMEN_8DP"
        android:text="99999"
        android:textColor="@color/colorBlack181823"
        android:textSize="@dimen/DIMEN_14SP" />
</RelativeLayout>