<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.power.home.ui.widget.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        app:MytitleBarRightText="跳过"
        app:MytitleBarRightTextColor="@color/colorBlack79808B" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_60DP"
        android:paddingLeft="@dimen/DIMEN_32DP"
        android:text="填写推荐码"
        android:textColor="@color/colorBlack1A1F28"
        android:textSize="@dimen/DIMEN_28SP"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_70DP"
        android:layout_marginRight="@dimen/DIMEN_32DP"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_referral_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="通过推荐人获取5位数字+字母组合"
            android:inputType="textEmailAddress|number"
            android:maxLength="5"
            android:paddingLeft="0.5dp"
            android:textColor="@color/colorBlack1A1F28"
            android:textColorHint="@color/colorBlackC2C8D0"
            android:textSize="@dimen/DIMEN_16SP" />

        <ImageView
            android:id="@+id/iv_edit_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/DIMEN_16DP"
            android:paddingRight="@dimen/DIMEN_16DP"
            android:src="@drawable/icon_edit_clear"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/view_referral_code"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginRight="@dimen/DIMEN_32DP"
        android:background="@color/colorBlackDCE2E8" />

    <TextView
        android:id="@+id/tv_accomplish"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_60DP"
        android:layout_marginRight="@dimen/DIMEN_32DP"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DIMEN_16SP"
        android:textStyle="bold"
        android:background="@drawable/back_button_enable"
        android:enabled="false"/>

</LinearLayout>