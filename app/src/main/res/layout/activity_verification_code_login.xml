<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <com.power.home.ui.widget.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        app:MytitleBarLeftImage="@drawable/icon_title_back_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码登录/注册"
        android:textStyle="bold"
        android:textColor="@color/colorBlack1A1F28"
        android:textSize="@dimen/DIMEN_28SP"
        android:paddingLeft="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_60DP"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/DIMEN_32DP"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_70DP">
        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:hint="请输入手机号"
            android:textSize="@dimen/DIMEN_16SP"
            android:textColor="@color/colorBlack1A1F28"
            android:textColorHint="@color/colorBlackC2C8D0"
            android:paddingLeft="0.5dp"
            android:inputType="number"
            android:maxLength="11"/>

        <ImageView
            android:id="@+id/iv_edit_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_edit_clear"
            android:paddingLeft="@dimen/DIMEN_16DP"
            android:paddingRight="@dimen/DIMEN_16DP"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/view_phone_num"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlackDCE2E8"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginRight="@dimen/DIMEN_32DP"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/DIMEN_32DP"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_10DP">
        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:hint="请输入验证码"
            android:textSize="@dimen/DIMEN_16SP"
            android:textColor="@color/colorBlack1A1F28"
            android:textColorHint="@color/colorBlackC2C8D0"
            android:paddingLeft="0.5dp"
            android:inputType="number"
            android:maxLength="4"/>

        <TextView
            android:id="@+id/tv_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textColor="@color/colorBlack79808B"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingLeft="@dimen/DIMEN_16DP" />

    </LinearLayout>

    <View
        android:id="@+id/view_verification_code"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlackDCE2E8"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginRight="@dimen/DIMEN_32DP"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="登录"
        android:textSize="@dimen/DIMEN_16SP"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="@dimen/DIMEN_32DP"
        android:layout_marginRight="@dimen/DIMEN_32DP"
        android:layout_marginTop="@dimen/DIMEN_60DP"
        android:background="@drawable/back_button_enable"
        android:enabled="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未注册手机号验证后自动登录"
        android:textSize="@dimen/DIMEN_12SP"
        android:textColor="@color/colorBlack79808B"
        android:gravity="center"
        android:layout_marginTop="@dimen/DIMEN_16DP"/>



</LinearLayout>