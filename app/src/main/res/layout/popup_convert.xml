<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_336DP"
    android:layout_margin="@dimen/DIMEN_32DP"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:ignore="Suspicious0dp,InefficientWeight,SpUsage,ContentDescription,
    HardcodedText,RtlSymmetry,RtlHardcoded,TextFields">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_180DP"
        android:background="@drawable/icon_convert_popup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_popup_convert"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/DIMEN_24DP"
            android:text="兑换成功"
            android:textColor="@color/colorBlack1A1F28"
            android:textSize="@dimen/DIMEN_16DP"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_convert_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlackC2C8D0"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:textSize="@dimen/DIMEN_12DP"
            android:textStyle="bold"
            tools:text="截止日期：2020年1月19日" />

        <Button
            android:id="@+id/button_convert_study"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_44DP"
            android:layout_margin="@dimen/DIMEN_16DP"
            android:background="@drawable/back_button_blue_sure"
            android:text="立即学习"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/DIMEN_16DP" />
    </LinearLayout>
</LinearLayout>