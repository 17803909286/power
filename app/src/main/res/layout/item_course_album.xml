<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_138DP"
    android:layout_marginLeft="@dimen/DIMEN_16DP"
    android:layout_marginTop="@dimen/DIMEN_12DP"
    android:layout_marginRight="@dimen/DIMEN_16DP"
    android:layout_marginBottom="@dimen/DIMEN_12DP"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/DIMEN_92DP"
        android:layout_height="@dimen/DIMEN_138DP">

        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="@dimen/DIMEN_92DP"
            android:layout_height="@dimen/DIMEN_138DP"
            android:scaleType="fitXY"
            android:src="@drawable/icon_place_holder_92_138_round" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_12DP">

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="第"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_10SP" />

            <TextView
                android:id="@+id/tv_course_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_4DP"
                android:layout_marginRight="@dimen/DIMEN_4DP"
                android:background="@color/colorWhiteF5F7FA"
                android:gravity="center"
                android:padding="@dimen/DIMEN_2DP"
                android:textColor="@color/colorBlue0D7EF9"
                android:textSize="@dimen/DIMEN_14SP"
                android:textStyle="bold"
                tools:text="21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="期"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_10SP" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_date"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/colorBlack1A1F28"
            android:textSize="@dimen/DIMEN_16SP"
            android:textStyle="bold"
            tools:text="如何“毁掉”竞争对手的人才" />

        <TextView
            android:id="@+id/tv_course_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_title"
            android:layout_marginTop="@dimen/DIMEN_8DP"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/colorBlack79808B"
            android:textSize="@dimen/DIMEN_12SP"
            tools:text="如何突现突袭、越轨发展" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/DIMEN_25DP"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_label"
                android:layout_width="@dimen/DIMEN_44DP"
                android:layout_height="@dimen/DIMEN_20DP"
                android:background="@drawable/shape_home_label_ffb339_bg"
                android:gravity="center"
                android:textColor="@color/colorYellowFFB339"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="免费" />

            <ImageView
                android:id="@+id/iv_course_lock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_course_locked" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/colorBlackC2C8D0"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="18:20" />

            <TextView
                android:id="@+id/tv_play_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_play_count_round_gray"
                android:drawablePadding="@dimen/DIMEN_4DP"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/DIMEN_4DP"
                android:textColor="@color/colorBlackC2C8D0"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="2.1万" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>