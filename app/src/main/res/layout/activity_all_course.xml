<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <com.power.home.ui.widget.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        app:MytitleBarLeftImage="@drawable/icon_title_back_black"
        app:MytitleBarTitle="全部课程"
        app:MytitleBarRightImage="@drawable/icon_search_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_classify"
            android:layout_width="@dimen/DIMEN_83DP"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:background="@color/colorWhiteF5F7FA"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="@color/colorWhite"/>



    </LinearLayout>

</LinearLayout>