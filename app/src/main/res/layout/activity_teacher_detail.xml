<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded,UselessParent
                ,ContentDescription,RelativeOverlap">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_522DP"
                    android:background="@drawable/back_teacher_detail">

                    <RelativeLayout
                        android:id="@+id/rl_up"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_44DP"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="个人详情"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/DIMEN_18SP"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/left_layout"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:clickable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/DIMEN_16DP"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_title_back_white_vip" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_291DP"
                        android:layout_below="@+id/rl_up"
                        android:layout_marginLeft="@dimen/DIMEN_38DP"
                        android:layout_marginTop="@dimen/DIMEN_103DP"
                        android:layout_marginRight="@dimen/DIMEN_38DP"
                        android:background="@drawable/back_teacher_detail_rechange"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_teacher_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/DIMEN_45DP"
                            android:gravity="center_vertical"
                            tools:text="XXXX"
                            android:textColor="@color/colorBlack1A1F28"
                            android:textSize="@dimen/DIMEN_20SP"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/DIMEN_16DP"
                            android:gravity="center_vertical"
                            android:text="状元资质"
                            android:textColor="@color/colorBlack1A1F28"
                            android:textSize="@dimen/DIMEN_14SP"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/DIMEN_24DP"
                            android:layout_height="@dimen/DIMEN_4DP"
                            android:layout_marginTop="@dimen/DIMEN_4DP"
                            android:background="@drawable/back_teacher_blue_coner" />

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/DIMEN_18DP"
                            android:layout_marginRight="@dimen/DIMEN_18DP"
                            android:layout_marginBottom="@dimen/DIMEN_36DP"
                            android:scrollbarSize="@dimen/DIMEN_4DP"
                            android:scrollbarThumbVertical="@drawable/back_teacher_bar"
                            android:scrollbarTrackVertical="@android:color/transparent"
                            android:scrollbars="vertical">

                            <TextView
                                android:id="@+id/tv_teacher_detail_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/DIMEN_18DP"
                                android:layout_marginTop="@dimen/DIMEN_12DP"
                                android:layout_marginRight="@dimen/DIMEN_18DP"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="@dimen/DIMEN_12DP"
                                android:textColor="@color/colorBlack79808B"
                                android:textSize="@dimen/DIMEN_12SP"
                                tools:text="2019届江苏文科状元\n连续三年全省前十\n奥林匹克数学竞赛\n《开讲吧》荣誉嘉宾\n《萌芽》杂志社第十届新概念大赛一等奖\n全国高中生科学发明大赛一等奖2019届江苏文科状元\n连续三年全省前十\n奥林匹克数学竞赛\n《开讲吧》荣誉嘉宾\n《萌芽》杂志社第十届新概念大赛一等奖\n全国高中生科学发明大赛一等奖2019届江苏文科状元\n连续三年全省前十\n奥林匹克数学竞赛\n《开讲吧》荣誉嘉宾\n《萌芽》杂志社第十届新概念大赛一等奖\n全国高中生科学发明大赛一等奖" />
                        </androidx.core.widget.NestedScrollView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_middle"
                        android:layout_width="@dimen/DIMEN_90DP"
                        android:layout_height="@dimen/DIMEN_116DP"
                        android:layout_below="@+id/rl_up"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/DIMEN_30DP">

                        <com.power.home.ui.widget.CircleImageView
                            android:id="@+id/civ_head"
                            android:layout_width="@dimen/DIMEN_90DP"
                            android:layout_height="@dimen/DIMEN_90DP"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/icon_teacher_holder"
                            app:border_color="@color/colorBlue7BBBFF"
                            app:border_width="@dimen/DIMEN_4DP" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_teacher_detail_head" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_18DP"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/DIMEN_16DP"
                        android:text="课程作品"
                        android:textColor="@color/colorBlack1A1F28"
                        android:textSize="@dimen/DIMEN_20SP"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_teacher_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:layout_marginBottom="@dimen/DIMEN_10DP"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:fastScrollEnabled="false" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>