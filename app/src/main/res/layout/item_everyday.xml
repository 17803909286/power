<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_42DP"
    android:layout_marginBottom="@dimen/DIMEN_32DP">

    <TextView
        android:id="@+id/tv_item_everyday_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/colorBlack1A1F28"
        android:textSize="@dimen/DIMEN_14SP"
        android:textStyle="bold"
        tools:text="每日分享得红包" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_everyday_title"
        android:layout_marginTop="@dimen/DIMEN_8DP"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_everyday_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colorBlack79808B"
            android:textSize="@dimen/DIMEN_12SP"
            tools:text="每日红包量:" />

        <TextView
            android:id="@+id/tv_item_everyday_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_8DP"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/DIMEN_12SP"
            tools:text="2/10" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_everyday_button"
        android:layout_width="@dimen/DIMEN_66DP"
        android:layout_height="@dimen/DIMEN_26DP"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back_everyday_blue"
        android:gravity="center"
        android:text="去分享"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DIMEN_12DP" />


</RelativeLayout>