<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_80DP"
    android:paddingLeft="@dimen/DIMEN_16DP"
    android:paddingRight="@dimen/DIMEN_16DP"
    tools:ignore="ContentDescription,HardcodedText,RtlHardcoded">


    <com.power.home.ui.widget.CircleImageView
        android:id="@+id/civ_item_team"
        android:layout_width="@dimen/DIMEN_48DP"
        android:layout_height="@dimen/DIMEN_48DP"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_avatar_header"
        app:border_color="@color/colorWhite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_16DP"
        android:layout_toRightOf="@+id/civ_item_team"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_item_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack1A1F28"
            android:textSize="@dimen/DIMEN_14SP"
            android:textStyle="bold"
            tools:text="大哥" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_14DP"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买动力营:"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_12SP" />

            <TextView
                android:id="@+id/tv_item_team_buy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_3DP"
                android:textColor="@color/colorBlack1A1F28"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="3人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_20DP"
                android:text="邀请注册:"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_12SP" />

            <TextView
                android:id="@+id/tv_item_team_invite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_3DP"
                android:textColor="@color/colorBlack1A1F28"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="3" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_team_phone"
            android:layout_width="@dimen/DIMEN_24DP"
            android:layout_height="@dimen/DIMEN_24DP"
            android:background="@drawable/icon_team_phone" />

        <ImageView
            android:id="@+id/iv_item_team_info"
            android:layout_width="@dimen/DIMEN_24DP"
            android:layout_height="@dimen/DIMEN_24DP"
            android:layout_marginLeft="@dimen/DIMEN_16DP"
            android:background="@drawable/icon_team_info" />

    </LinearLayout>

    <View
        style="@style/line_0_5"
        android:layout_alignParentBottom="true" />


</RelativeLayout>