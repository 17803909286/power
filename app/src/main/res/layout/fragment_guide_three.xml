<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:ignore="ContentDescription,HardcodedText,UseCompoundDrawables">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_view"
        android:layout_marginBottom="@dimen/DIMEN_30DP"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="教育为核心，成长为动力"
            android:textColor="@color/colorBlack1A1F28"
            android:textSize="@dimen/DIMEN_20SP"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/DIMEN_20DP"
            android:text="智慧教育赋能进步，动力学社提升成长"
            android:textColor="@color/colorBlackC2C8D0"
            android:textSize="@dimen/DIMEN_14SP" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_375DP"
        android:layout_centerInParent="true"
        android:src="@drawable/guide_three" />

    <TextView
        android:id="@+id/button_open"
        android:layout_width="@dimen/DIMEN_120DP"
        android:layout_height="@dimen/DIMEN_40DP"
        android:layout_below="@+id/iv_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_24DP"
        android:background="@drawable/back_button_accent_coner22_stroke"
        android:gravity="center"
        android:text="立即体验"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/DIMEN_14SP" />
</RelativeLayout>