<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_114DP"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/DIMEN_16DP"
    android:paddingRight="@dimen/DIMEN_16DP"
    android:paddingTop="@dimen/DIMEN_12DP"
    android:paddingBottom="@dimen/DIMEN_12DP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="@dimen/DIMEN_160DP"
            android:layout_height="@dimen/DIMEN_90DP"
            android:scaleType="fitXY"
            android:src="@drawable/icon_place_holder_160_90_round" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_8DP">

            <TextView
                android:id="@+id/tv_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/colorBlack1A1F28"
                android:textSize="@dimen/DIMEN_16SP"
                android:textStyle="bold"
                tools:text="如何“毁掉”竞争对手的人才" />

            <TextView
                android:id="@+id/tv_course_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_course_title"
                android:layout_marginTop="@dimen/DIMEN_8DP"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_14SP"
                tools:text="如何突现突袭、越轨发展" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_course_size"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/colorBlackC2C8D0"
                    android:textSize="@dimen/DIMEN_12SP"
                    tools:text="更新至第21节/共26节课" />

                <TextView
                    android:id="@+id/tv_play_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/DIMEN_16DP"
                    android:layout_alignParentBottom="true"
                    android:drawableLeft="@drawable/icon_course_gray_play"
                    android:drawablePadding="@dimen/DIMEN_4DP"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/DIMEN_4DP"
                    android:textColor="@color/colorBlackA4ABB3"
                    android:textSize="@dimen/DIMEN_12SP"
                    tools:text="2.1万" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>