<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.power.home.ui.widget.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        app:MytitleBarLeftImage="@drawable/icon_title_back_black"
        app:MytitleBarTitle="我的银行卡" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_116DP"
        android:layout_marginTop="@dimen/DIMEN_16DP"
        android:background="@drawable/back_bank_info"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_32DP"
            android:layout_marginTop="@dimen/DIMEN_16DP"
            android:layout_marginRight="@dimen/DIMEN_32DP">

            <TextView
                android:id="@+id/tv_bank_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/yuan_dot_accent"
                android:drawablePadding="@dimen/DIMEN_8DP"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/DIMEN_20SP"
                android:textStyle="bold"
                tools:text="中国工商银行" />

            <TextView
                android:id="@+id/tv_bank_info_change"
                android:layout_width="@dimen/DIMEN_66DP"
                android:layout_height="@dimen/DIMEN_22DP"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_white_coners_bian"
                android:gravity="center"
                android:text="更换银行卡"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/DIMEN_10SP" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/DIMEN_188DP"
            android:layout_height="@dimen/DIMEN_20DP"
            android:layout_marginLeft="@dimen/DIMEN_32DP"
            android:layout_marginTop="@dimen/DIMEN_16DP"
            android:layout_marginRight="@dimen/DIMEN_32DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_info_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/DIMEN_16SP"
                tools:text="8929" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="****"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/DIMEN_16SP" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="****"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/DIMEN_16SP" />

            <TextView
                android:id="@+id/tv_bank_info_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/DIMEN_16SP"
                tools:text="2727" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>