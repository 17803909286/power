<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/DIMEN_32DP"
    android:background="@drawable/back_popup"
    android:orientation="vertical"
    tools:ignore="Suspicious0dp,InefficientWeight,
    HardcodedText,RtlSymmetry,RtlHardcoded,TextFields">

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="@dimen/DIMEN_160DP"
        android:layout_height="@dimen/DIMEN_160DP"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/DIMEN_24DP" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/DIMEN_16DP"
        android:textColor="@color/colorBlack1A1F28"
        android:textSize="@dimen/DIMEN_14SP"
        android:text="保存图片，微信扫码加客服微信领取资料" />

    <Button
        android:id="@+id/button_creat_commit_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:layout_marginLeft="@dimen/DIMEN_16DP"
        android:layout_marginRight="@dimen/DIMEN_16DP"
        android:layout_marginBottom="@dimen/DIMEN_16DP"
        android:layout_marginTop="@dimen/DIMEN_8DP"
        android:background="@drawable/back_button_blue_sure"
        android:text="保存到相册"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DIMEN_16SP" />
</LinearLayout>