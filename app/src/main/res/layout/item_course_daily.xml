<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_138DP"
    android:layout_marginTop="@dimen/DIMEN_12DP"
    android:layout_marginRight="@dimen/DIMEN_16DP"
    android:layout_marginLeft="@dimen/DIMEN_16DP"
    android:layout_marginBottom="@dimen/DIMEN_12DP">

    <RelativeLayout
        android:layout_width="@dimen/DIMEN_92DP"
        android:layout_height="@dimen/DIMEN_138DP">
        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="@dimen/DIMEN_92DP"
            android:layout_height="@dimen/DIMEN_138DP"
            android:src="@drawable/icon_place_holder_92_138_round"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_play_amount"
            android:layout_width="@dimen/DIMEN_92DP"
            android:layout_height="@dimen/DIMEN_16DP"
            tools:text="2.1万"
            android:drawableLeft="@drawable/icon_course_white_play"
            android:drawablePadding="@dimen/DIMEN_4DP"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/DIMEN_10SP"
            android:background="@drawable/icon_course_playcount_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/DIMEN_4DP"
            android:maxLines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_12DP">

        <LinearLayout
            android:id="@+id/ll_course_phase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第"
                android:textSize="@dimen/DIMEN_10SP"
                android:textColor="@color/colorBlack79808B"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_course_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="21"
                android:textSize="@dimen/DIMEN_14SP"
                android:textColor="@color/colorBlue0D7EF9"
                android:gravity="center"
                android:background="@color/colorWhiteF5F7FA"
                android:layout_marginLeft="@dimen/DIMEN_4DP"
                android:layout_marginRight="@dimen/DIMEN_4DP"
                android:padding="@dimen/DIMEN_2DP"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="期"
                android:textSize="@dimen/DIMEN_10SP"
                android:textColor="@color/colorBlack79808B"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="如何“毁掉”竞争对手的人才"
            android:textSize="@dimen/DIMEN_16SP"
            android:textColor="@color/colorBlack1A1F28"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_below="@+id/ll_course_phase"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_course_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="如何突现突袭、越轨发展"
            android:textSize="@dimen/DIMEN_12SP"
            android:textColor="@color/colorBlack79808B"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/tv_course_title"
            android:layout_marginTop="@dimen/DIMEN_8DP"
            android:gravity="center_vertical"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_course_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/colorBlackC2C8D0"
                android:textSize="@dimen/DIMEN_12SP"
                tools:text="18:20" />

            <TextView
                android:id="@+id/tv_course_label"
                android:layout_width="@dimen/DIMEN_44DP"
                android:layout_height="@dimen/DIMEN_20DP"
                android:gravity="center"
                android:textColor="@color/colorYellowFFB339"
                android:textSize="12sp"
                tools:text="免费"
                android:layout_marginLeft="@dimen/DIMEN_4DP"
                android:background="@drawable/shape_home_label_ffb339_bg"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_course_lock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_course_locked"/>

        </LinearLayout>



    </RelativeLayout>





</LinearLayout>