<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <com.power.home.ui.widget.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        app:MytitleBarLeftImage="@drawable/icon_title_back_black"
        app:MytitleBarTitle="购买专辑" />

    <LinearLayout
        android:id="@+id/ll_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/DIMEN_16DP">

        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="@dimen/DIMEN_92DP"
            android:layout_height="@dimen/DIMEN_138DP"
            android:src="@drawable/icon_place_holder_64_96"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_12DP">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="我们如何能够得到不同情况下的高效率我们如何能够得到不同情况下的高效率我们如何能够得到不同情况下的高效率！"
                android:textColor="@color/colorBlack1A1F28"
                android:textSize="@dimen/DIMEN_16SP"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="@dimen/DIMEN_8DP"
                tools:text="课程的简介最多两行课程的简介最多两行课程的简介最多两行！"
                android:textColor="@color/colorBlack79808B"
                android:textSize="@dimen/DIMEN_14SP"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥199.00"
                android:textColor="@color/colorYellowFFB339"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/DIMEN_2DP"/>



        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_48DP"
        android:text="支付方式"
        android:textSize="@dimen/DIMEN_20SP"
        android:textColor="@color/colorBlack1A1F28"
        android:textStyle="bold"
        android:paddingLeft="@dimen/DIMEN_16DP"
        android:layout_marginTop="@dimen/DIMEN_24DP"
        android:gravity="center_vertical"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_pay_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="@color/colorWhite"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_immediately_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_48DP"
        android:text="立即支付"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/DIMEN_16SP"
        android:textStyle="bold"
        android:background="@color/colorBlue0D7EF9"
        android:gravity="center"
        android:layout_marginLeft="@dimen/DIMEN_16DP"
        android:layout_marginRight="@dimen/DIMEN_16DP"
        android:layout_marginBottom="@dimen/DIMEN_48DP"/>




</LinearLayout>